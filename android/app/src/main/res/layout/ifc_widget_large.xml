<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/widget_background">

    <TextClock
        android:id="@+id/widget_text_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="h:mm"
        android:format24Hour="HH:mm"
        android:textSize="72sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/widget_clock"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:shadowColor="@color/widget_shadow"
        android:shadowRadius="2.75"
        android:shadowDx="0"
        android:shadowDy="2" />

    <!-- IFC date -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/ifc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IFC"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.15"
            android:textColor="@color/widget_tertiary"
            android:shadowColor="@color/widget_shadow"
            android:shadowRadius="2.75"
            android:shadowDx="0"
            android:shadowDy="2"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/ifc_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IFC Date"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:textColor="@color/widget_primary"
            android:shadowColor="@color/widget_shadow"
            android:shadowRadius="2.75"
            android:shadowDx="0"
            android:shadowDy="2" />

    </LinearLayout>

    <!-- Gregorian date -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/gregorian_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRE"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.15"
            android:textColor="@color/widget_tertiary"
            android:shadowColor="@color/widget_shadow"
            android:shadowRadius="2.75"
            android:shadowDx="0"
            android:shadowDy="2"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/gregorian_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textAllCaps="true"
            android:textColor="@color/widget_secondary"
            android:shadowColor="@color/widget_shadow"
            android:shadowRadius="2.75"
            android:shadowDx="0"
            android:shadowDy="2" />

    </LinearLayout>

</LinearLayout>
