<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/widget_background">

    <!-- IFC label + date -->
    <TextView
        android:id="@+id/ifc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IFC"
        android:textSize="10sp"
        android:textAllCaps="true"
        android:letterSpacing="0.15"
        android:textColor="@color/widget_tertiary" />

    <TextView
        android:id="@+id/ifc_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IFC Date"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/widget_primary"
        android:layout_marginTop="2dp" />

    <!-- Analog clock -->
    <AnalogClock
        android:id="@+id/widget_analog_clock"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Gregorian label + date -->
    <TextView
        android:id="@+id/gregorian_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREGORIAN"
        android:textSize="10sp"
        android:textAllCaps="true"
        android:letterSpacing="0.15"
        android:textColor="@color/widget_tertiary" />

    <TextView
        android:id="@+id/gregorian_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13sp"
        android:textColor="@color/widget_secondary"
        android:layout_marginTop="2dp" />

</LinearLayout>
